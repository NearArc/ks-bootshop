<ul class="nav-desktop-menu nav justify-content-center">
  {% for link in linklists[block.settings.main_menu].links %}
    <li class="nav-item dropdown {% if link.links %}has-mega-menu{% endif %}">
      {% if link.links == blank %}
        <a class="nav-link" href="{{ link.url }}">{{ link.title }}</a>
      {% else %}
        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">{{ link.title }}</a>
        <div class="dropdown-megamenu">
          <div class="dropdown-grid">
            {% for child_link in link.links %}
              <div class="dropdown-column">
                <a class="dropdown-heading" href="{{ child_link.url }}">{{ child_link.title }}</a>
                {% if child_link.links.size > 0 %}
                  <ul class="dropdown-submenu">
                    {% for grandchild_link in child_link.links %}
                      <li><a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </li>
  {% endfor %}
</ul>
